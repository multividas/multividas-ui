{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowUnreachableCode": false,
    "rootDir": "./",
    "outDir": "./dist"
  },
  "exclude": ["node_modules", "dist"]
}
